@model XelectionVote.Web.Models.RegisterNewUserViewModel
@{
    ViewData["Title"] = "Register";
}

<h2>Register New User</h2>

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>

            <div class="container">
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-xs-12">
                        <label asp-for="FirstName">First Name</label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-warning"></span>
                    </div>

                    <div class="col-lg-6 col-md-6 col-xs-12">
                        <label asp-for="LastName">Last Name</label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-warning"></span>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-xs-12">
                        <label asp-for="Occupation">Occupation</label>
                        <input asp-for="Occupation" class="form-control" />
                        <span asp-validation-for="Occupation" class="text-warning"></span>
                    </div>

                    <div class="col-lg-6 col-md-6 col-xs-12">
                        <label asp-for="Stratum">Stratum</label>
                        <input asp-for="Stratum" class="form-control" />
                        <span asp-validation-for="Stratum" class="text-warning"></span>
                    </div>
                </div>
                <br />

                <div class="row">
                    <div class="col-lg-6 col-md-6 col-xs-12">
                        <label asp-for="Gender">Gender</label>
                        <input asp-for="Gender" class="form-control" />
                        <span asp-validation-for="Gender" class="text-warning"></span>
                    </div>

                    <div class="col-lg-6 col-md-6 col-xs-12">
                        <label asp-for="Bithdate">Birthdate</label>
                        <input asp-for="Bithdate" type="date" class="form-control" />
                        <span asp-validation-for="Bithdate" class="text-warning"></span>
                    </div>
                </div>
                <br />

                <div class="row">
                    <div class="col-lg-6 col-md-6 col-xs-12">
                        <label asp-for="Ciudad">City</label>
                        <input asp-for="Ciudad" class="form-control" />
                        <span asp-validation-for="Ciudad" class="text-warning"></span>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-lg-4 col-md-4 col-xs-12">
                        <label asp-for="Username">Username</label>
                        <input asp-for="Username" class="form-control" />
                        <span asp-validation-for="Username" class="text-warning"></span>
                    </div>

                    <div class="col-lg-4 col-md-4 col-xs-12">
                        <label asp-for="Password">Password</label>
                        <input asp-for="Password" type="password" class="form-control" />
                        <span asp-validation-for="Password" class="text-warning"></span>
                    </div>

                    <div class="col-lg-4 col-md-3 col-xs-12">
                        <label asp-for="Confirm">Confirm</label>
                        <input asp-for="Confirm" type="password" class="form-control" />
                        <span asp-validation-for="Confirm" class="text-warning"></span>
                    </div>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Register New User" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
